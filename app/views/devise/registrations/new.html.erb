<h1>Sign up</h1>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<% f.inputs do %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
	<% end %>

	<% f.buttons do %>
		<%= f.commit_button :label => "Sign up" %>
	<% end %>

<% end %>

<%= render :partial => "devise/shared/links" %>
